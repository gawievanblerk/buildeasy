# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://buildeasy_user:buildeasy_password@localhost:5432/buildeasy_db

# Authentication (Rozitech Auth Server)
AUTH_SERVER_URL=http://localhost:4000
JWT_SECRET=your_jwt_secret_key_here

# File Storage (AWS S3 or Local)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=buildeasy-uploads

# Local Storage Path
LOCAL_STORAGE_PATH=./uploads

# App Runtime
APP_RUNTIME_URL=http://localhost:5001

# CORS
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/buildeasy.log
